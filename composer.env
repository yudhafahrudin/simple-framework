{
    "require": {
        "envms/fluentpdo": "1.1.*",
        "klein/klein": "^2.1"   
    }
}

{
    "name": "nova-framework/framework",
    "type": "project",
    "description": "Framework for PHP 5.6+",
    "homepage": "https://github.com/nova-framework/framework",
    "license": "MIT",
    "authors": [
        {
            "name": "David Carr",
            "email": "dave@daveismyname.com",
            "homepage": "http://daveismyname.blog",
            "role": "Co-author"
        },
        {
            "name": "Virgil-Adrian Teaca",
            "email": "virgil@giulianaeassociati.com",
            "homepage": "http://giulianaeassociati.com",
            "role": "Co-author"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/nova-framework/system"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "nova-framework/system": "^3.0",
        "almasaeed2010/adminlte": "^2.4",
        "twbs/bootstrap": "^3.3",
        "ramsey/uuid": "~3.0",
        "studio-42/elfinder": "^2.1",
        "guzzlehttp/guzzle": "^5.0",
        "filp/whoops": "^2.1",
        "google/recaptcha": "~1.1",
        "dompdf/dompdf": "^0.8",
        "thunderer/shortcode": "^0.6",
        "intervention/image": "^2.4"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.6"
    },
    "autoload": {
        "classmap": [
            "app/Database/Migrations",
            "app/Database/Seeds"
        ],
        "psr-4": {
            "App\\" : "app/",
            "Shared\\" : "shared/"
        },
        "files": [
            "shared/Support/helpers.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php forge optimize",
            "php forge module:optimize"
        ],
        "post-update-cmd": [
            "php forge optimize",
            "php forge module:optimize"
        ],
        "post-create-project-cmd": [
            "php forge key:generate"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
